# =============================================================================
# uSipipo VPN Manager - Environment Configuration
# =============================================================================
# Rellena TODOS los valores marcados como REQUERIDO
# =============================================================================

# =============================================================================
# Telegram Bot Configuration (REQUERIDO)
# =============================================================================
TELEGRAM_TOKEN=TU_TELEGRAM_BOT_TOKEN_AQUI  # REQUERIDO: Obtener de @BotFather
AUTHORIZED_USERS=                          # Opcional: 123456789,987654321

# =============================================================================
# Server Network Information (Auto-detected by your script)
# =============================================================================
SERVER_IPV4=
SERVER_IPV6=
SERVER_IP=

# =============================================================================
# WireGuard Server Configuration (Auto-generated by your script)
# =============================================================================
WG_INTERFACE=
WG_SERVER_IPV4=
WG_SERVER_IPV6=
WG_SERVER_PORT=
WG_SERVER_PUBKEY=
WG_SERVER_PRIVKEY=
WG_ALLOWED_IPS=
WG_PATH=/etc/wireguard
WG_ENDPOINT=

# =============================================================================
# Outline VPN Server Configuration (Auto-generated by your script)
# =============================================================================
OUTLINE_API_URL=
OUTLINE_CERT_SHA256=
OUTLINE_API_PORT=
OUTLINE_KEYS_PORT=
OUTLINE_SERVER_IP=
OUTLINE_DASHBOARD_URL=

# =============================================================================
# FastAPI Backend Configuration (REQUERIDO)
# =============================================================================
API_HOST=0.0.0.0
API_PORT=8000
SECRET_KEY=TU_SECRET_KEY_AQUI_GENERADA_CON_OPENSSL  # REQUERIDO: openssl rand -hex 32
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
CORS_ORIGINS=  # Opcional: http://localhost:3000,https://tudominio.com

# =============================================================================
# Supabase (PostgreSQL) Database Configuration (REQUERIDO)
# =============================================================================
SUPABASE_URL=TU_SUPABASE_URL_AQUI           # REQUERIDO
SUPABASE_SERVICE_KEY=TU_SERVICE_KEY_AQUI    # REQUERIDO
SUPABASE_ANON_KEY=                          # Opcional
SUPABASE_JWT_SECRET=                        # Opcional pero recomendado
# DATABASE_URL: Se convertirá automáticamente a asyncpg para SQLAlchemy async
# Formato aceptados:
#   - postgresql+asyncpg://user:pass@host:5432/db (RECOMENDADO - directo)
#   - postgresql+psycopg2://user:pass@host:5432/db (convertido automáticamente)
#   - postgresql://user:pass@host:5432/db (convertido automáticamente)
# NOTA: La aplicación convertirá automáticamente cualquier formato a asyncpg
DATABASE_URL=postgresql+asyncpg://postgres:[PASSWORD]@db.[PROJECT_ID].supabase.co:5432/postgres

# =============================================================================
# Application & Security Settings
# =============================================================================
APP_ENV=production
ADMIN_EMAIL=tu@email.com                    # Opcional
DEFAULT_LANG=es
VPN_KEY_EXPIRE_DAYS=0
MAX_KEYS_PER_USER=5

# =============================================================================
# Logging & Monitoring
# =============================================================================
LOG_LEVEL=info
LOG_FILE_PATH=./logs/vpn_manager.log
SENTRY_DSN=                                 # Opcional
ENABLE_METRICS=false

# =============================================================================
# Rate Limiting & Security
# =============================================================================
TELEGRAM_RATE_LIMIT=30
API_RATE_LIMIT=60
ENABLE_IP_WHITELIST=false
API_ALLOWED_IPS=                            # Opcional: 192.168.1.1,10.0.0.1

# =============================================================================
# System Paths & Directories
# =============================================================================
VPN_TEMPLATES_PATH=./templates
TEMP_PATH=./temp
QR_CODE_PATH=./static/qr_codes
CLIENT_CONFIGS_PATH=./static/configs

# =============================================================================
# Advanced Settings
# =============================================================================
DB_POOL_SIZE=10
DB_TIMEOUT=30
TELEGRAM_WEBHOOK_URL=                       # Opcional
SESSION_TIMEOUT=60