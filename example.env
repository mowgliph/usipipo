# =============================================================================
# uSipipo VPN Manager - Environment Configuration Template
# =============================================================================
# IMPORTANT: Copy this file to .env after installation.
# The install.sh script will auto-generate and update many of these values.
# =============================================================================


# =============================================================================
# Telegram Bot Configuration
# =============================================================================

# Telegram Bot token (from @BotFather)
TELEGRAM_TOKEN=

# Comma-separated user IDs allowed to manage the VPN
AUTHORIZED_USERS=


# =============================================================================
# Server Network Information
# =============================================================================

# Public IPv4 address (auto-detected)
SERVER_IPV4=

# Public IPv6 address (optional, auto-detected)
SERVER_IPV6=

# Primary public IP (used for endpoints) - auto-selected
SERVER_IP=


# =============================================================================
# WireGuard Server Configuration (Official Installer)
# =============================================================================

# WireGuard interface name (usually wg0)
WG_INTERFACE=

# WireGuard IPv4 range (server side)
WG_SERVER_IPV4=

# WireGuard IPv6 range (server side)
WG_SERVER_IPV6=

# UDP port WireGuard listens on  
WG_SERVER_PORT=

# WireGuard public key
WG_SERVER_PUBKEY=

# WireGuard private key (KEEP SECRET)
WG_SERVER_PRIVKEY=

# Allowed IPs for client configs
WG_ALLOWED_IPS=

# WireGuard config path
WG_PATH=/etc/wireguard

# Endpoint used for clients â†’ SERVER_IP:WG_SERVER_PORT
WG_ENDPOINT=


# =============================================================================
# Outline VPN Server Configuration (Official Shadowbox Installer)
# =============================================================================

# Outline Manager REST API URL (includes secret)
OUTLINE_API_URL=

# Outline API Secret recovery (SHA256 cert)
OUTLINE_CERT_SHA256=

# API port (Shadowbox)
OUTLINE_API_PORT=

# Keys port for access links
OUTLINE_KEYS_PORT=

# Public IP used by Outline access URL
OUTLINE_SERVER_IP=

# Dashboard URL (computed)
OUTLINE_DASHBOARD_URL=


# =============================================================================
# System & Logging
# =============================================================================

# Production log level (recommended: info)
LOG_LEVEL=info

# Environment mode
NODE_ENV=production

# =============================================================================
# End of Configuration
# =============================================================================